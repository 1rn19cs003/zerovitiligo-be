generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Doctor {
  id         String      @id @default(uuid())
  name       String
  email      String      @unique
  password   String
  role       DoctorRole  @default(ASSISTANT)
  assistants Assistant[] @relation("DoctorAssistants")
  patients   Patient[]
  createdAt  DateTime    @default(now())

  PatientHistory PatientHistory[]
}

model Assistant {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  doctor    Doctor    @relation("DoctorAssistants", fields: [doctorId], references: [id])
  doctorId  String
  patients  Patient[]
  createdAt DateTime  @default(now())

  PatientHistory PatientHistory[]
}

model Patient {
  id               String           @id @default(uuid())
  patentId         String           @unique
  name             String
  age              Int
  bodyWeight       Float?
  address          String?
  vitiligoDuration String?
  currentMedicine  String?
  covidVaccine     String?
  vaccineDoses     Int?
  otherDisease     String?
  familyHistory    String?
  images           Image[]
  status           Status           @default(INITIAL)
  doctor           Doctor?          @relation(fields: [doctorId], references: [id])
  doctorId         String?
  assistant        Assistant?       @relation(fields: [assistantId], references: [id])
  assistantId      String?
  histories        PatientHistory[]
  createdAt        DateTime         @default(now())
}

model Image {
  id         String   @id @default(uuid())
  url        String
  patient    Patient  @relation(fields: [patientId], references: [id])
  patientId  String
  uploadedAt DateTime @default(now())
}

model PatientHistory {
  id             String     @id @default(uuid())
  patient        Patient    @relation(fields: [patientId], references: [id])
  patientId      String
  doctor         Doctor?    @relation(fields: [doctorId], references: [id])
  doctorId       String?
  assistant      Assistant? @relation(fields: [assistantId], references: [id])
  assistantId    String?
  lastMedicine   String?
  adviceGiven    String?
  lastInspection DateTime
  nextInspection DateTime?
  createdAt      DateTime   @default(now())
}

enum DoctorRole {
  ADMIN
  ASSISTANT
}

enum Status {
  INITIAL
  PROCESSING
  TREATED
}
